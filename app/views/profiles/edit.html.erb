<% title t('page_titles.profiles.edit') %>

<%= form_for @profile, url: profile_path, html: {class: 'form-horizontal', role: 'form'} do |f| %>
    <%= f.error_messages %>

    <div class="form-group">
      <%= f.label :name, class: 'col-md-2 control-label' %>
      <div class="col-md-8">
        <%= f.text_field :name, class: 'form-control input-lg', placeholder: 'Informe o seu nome', autofocus: true %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-md-offset-2 col-md-8">
        <%= f.submit 'Atualizar Perfil', data: { disable_with: t('messages.submit_disable_with') }, class: 'btn btn-primary btn-lg' %>
        <%= link_to t('actions.cancel'), root_path, class: 'btn btn-danger btn-lg'%>
      </div>
    </div>
<% end %>